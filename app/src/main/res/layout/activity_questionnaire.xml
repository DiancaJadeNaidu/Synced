<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rule_bg_lightpink"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="6dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Questionnaire"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:paddingBottom="16dp"/>

            <!-- Birthday -->
            <TextView
                android:text="ðŸŽ‚ Birthday"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/birthdayInput"
                android:hint="mm/dd/yyyy"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_bg"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:padding="12dp"/>
            <!-- Gender -->
            <TextView
                android:text="âš§ Gender"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/maleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â™‚ Male"
                    android:textColor="@android:color/black"/>

                <RadioButton
                    android:id="@+id/femaleRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â™€ Female"
                    android:textColor="@android:color/black"/>
            </RadioGroup>
            <!-- Zodiac -->
            <TextView
                android:text="â™Œ Zodiac Sign"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/zodiacSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Pet Preference -->
            <TextView
                android:text="ðŸ¾ Are you a..."
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/petRadioGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/dogRadio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸ• Dog Person"
                    android:textColor="@android:color/black"/>
                <RadioButton
                    android:id="@+id/catRadio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸˆ Cat Person"
                    android:textColor="@android:color/black"/>
            </RadioGroup>

            <!-- Siblings -->
            <TextView
                android:text="ðŸ‘« Siblings"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/siblingSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Continent -->
            <TextView
                android:text="ðŸŒ Continent"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/continentSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Country -->
            <TextView
                android:text="ðŸ³ï¸ Country"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Favorite Movie Genre -->
            <TextView
                android:text="ðŸŽ¬ Favorite Movie Genre"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/movieSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Favorite Color -->
            <TextView
                android:text="ðŸŽ¨ Favorite Color"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <GridLayout
                android:columnCount="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:layout_marginTop="8dp"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <Button android:id="@+id/redButton" android:backgroundTint="@android:color/holo_red_light"
                    android:layout_width="0dp" android:layout_height="70dp"
                    android:layout_columnWeight="1" android:contentDescription="Red"/>
                <Button android:id="@+id/greenButton" android:backgroundTint="@android:color/holo_green_light"
                    android:layout_width="0dp" android:layout_height="70dp"
                    android:layout_columnWeight="1" android:contentDescription="Green"/>
                <Button android:id="@+id/orangeButton" android:backgroundTint="@android:color/holo_orange_light"
                    android:layout_width="0dp" android:layout_height="70dp"
                    android:layout_columnWeight="1" android:contentDescription="Orange"/>
                <Button android:id="@+id/blueButton" android:backgroundTint="@android:color/holo_blue_light"
                    android:layout_width="0dp" android:layout_height="70dp"
                    android:layout_columnWeight="1" android:contentDescription="Blue"/>
            </GridLayout>

            <!-- Religion -->
            <TextView
                android:text="ðŸ™ Religion"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/religionSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Hobbies -->
            <TextView
                android:text="ðŸŽ¯ Hobbies and Interests"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <CheckBox android:id="@+id/fitnessCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fitness" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/musicCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Music" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/artCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Art" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/cookingCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cooking" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/travelCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Travel" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/gamingCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gaming" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/readingCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reading" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/sportsCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sports" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/dancingCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dancing" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/photographyCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Photography" android:textColor="@android:color/black"/>
                <CheckBox android:id="@+id/otherCheck" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Other" android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Favorite Food -->
            <TextView
                android:text="ðŸ• Favorite Food"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/foodSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <!-- Outgoing Slider -->
            <TextView
                android:text="ðŸ—£ï¸ How outgoing are you?"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/outgoingSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"/>

            <!-- Submit -->
            <Button
                android:id="@+id/completeProfileButton"
                android:text="Complete Profile! ðŸŽ‰"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Button1"
                android:textColor="@android:color/white"
                android:padding="12dp"
                app:cornerRadius="25dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
