<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Zodiac / Avatar Icon -->
        <ImageView
            android:id="@+id/zodiacIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_aries"
            android:contentDescription="Zodiac Sign"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"/>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nameText"
                android:text="Alex (Aries)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bioText"
                android:text="Loves comedy movies, fitness enthusiast..."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Chips row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/traitsChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Traits"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="#8032CD32"
                    android:background="@drawable/chip_like_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/zodiacChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="Zodiac"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="#8032CD32"
                    android:background="@drawable/chip_like_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Match % + Profile Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/matchPercent"
                android:text="95%\nmatch"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewProfileButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
